XTerm.termName: xterm-256color
XTerm.VT100*dynamicColors: on
XTerm.vt100.locale: true

xterm*faceName: JetBrains Mono Nerd Font
xterm*renderFont: true
xterm*faceSize: 20

*VT100.selectToClipboard: true
*VT100.backarrowKey: false
*VT100.Translations: #override \
	<Key>Delete: string("\033[3~")\n\
	<Key>Home: string("\033[1~")\n\
	<Key>End: string("\033[4~")\n\
Ctrl Shift <Key>C: copy-selection(CLIPBOARD)\n\
Ctrl Shift <Key>V: insert-selection(CLIPBOARD)
*ttyModes: erase ^?

! Tender color scheme, made by jacoborus
! adapted by Jose Esparza

! special
*.foreground:   #eeeeee
*.background:   #282828
*.cursorColor:  #eeeeee

! black
*.color0:       #282828
*.color8:       #4c4c4c

! red
*.color1:       #f43753
*.color9:       #f43753

! green
*.color2:       #c9d05c
*.color10:      #c9d05c

! yellow
*.color3:       #ffc24b
*.color11:      #ffc24b

! blue
*.color4:       #b3deef
*.color12:      #b3deef

! magenta
*.color5:       #d3b987
*.color13:      #d3b987

